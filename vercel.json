{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "framework": "nextjs",
  "buildCommand": "cd apps/web && pnpm run build",
  "installCommand": "pnpm install",
  "outputDirectory": "apps/web/.next",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/apps/server/src/index.ts"
    }
  ]
}