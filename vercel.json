{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "framework": "nextjs",
  "buildCommand": "cd apps/web && pnpm run build",
  "installCommand": "pnpm install",
  "outputDirectory": "apps/web/.next",
  "functions": {
    "apps/web/src/app/api/[...route]/route.ts": {
      "runtime": "edge",
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/[...route]"
    }
  ]
}