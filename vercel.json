{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "rootDirectory": "apps/web",
  "framework": "nextjs",
  "buildCommand": "pnpm run build",
  "installCommand": "pnpm install",
  "outputDirectory": ".next",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "../server/src/index.ts"
    }
  ]
}